{
  "name": "task-reminder",
  "version": "0.1.4",
  "description": "Electron app for task management with alarm functionality",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --publish=never",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always",
    "release": "node build-release.js"
  },
  "keywords": ["electron", "task", "reminder", "alarm"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "node-notifier": "^10.0.1",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.taskreminder.app",
    "productName": "Task Reminder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "asar": true,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "AMoussa77",
      "repo": "Taskreminder"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "publisherName": "Task Reminder",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility",
      "icon": "assets/icon.png"
    }
  }
}